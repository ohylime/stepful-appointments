generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  COACH
  STUDENT
  ADMIN
}

model Coach {
  id          Int        @id @default(autoincrement())
  phoneNumber String     @unique
  firstName   String
  lastName    String
  role        Role       @default(COACH)
  appts       Appt[]
  feedbacks   FeedBack[]
}

model Student {
  id          Int    @id @default(autoincrement())
  phoneNumber String @unique
  firstName   String
  lastName    String
  role        Role   @default(STUDENT)
  appts       Appt[]
}

model Appt {
  id        Int       @id @default(autoincrement())
  coach     Coach     @relation(fields: [coachId], references: [id])
  coachId   Int
  student   Student?  @relation(fields: [studenId], references: [id])
  studenId  Int
  feedback  FeedBack?
  startTime DateTime
  endTime   DateTime
}

model FeedBack {
  id    Int  @id @default(autoincrement())
  appt  Appt @relation(fields: [appId], references: [id])
  appId Int  @unique

  coach   Coach   @relation(fields: [coachId], references: [id])
  coachId Int
  score   Int
  note    String?
}
